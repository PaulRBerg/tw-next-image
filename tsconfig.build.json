{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./node_modules/@sablier/devkit/tsconfig/build.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "exclude": ["./node_modules", "./src/**/*.test.ts", "./src/**/*.test.tsx"],
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}
